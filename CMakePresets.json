{
  "version": 2,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 29,
    "patch": 3
  },
  "configurePresets": [
    {
      "name": "local/debug",
      "displayName": "Debug",
      "description": "local debug build",
      "generator": "Unix Makefiles",
      "binaryDir": "build",
      "cacheVariables": {
        "CMAKE_EXPORT_COMPILE_COMMANDS": "YES",
        "CMAKE_BUILD_TYPE": "Debug",
        "CMAKE_CXX_FLAGS": "-Og -fsanitize=address,undefined -Wall -Wpedantic -Werror -Wno-error=gnu-case-range -Wno-gnu-case-range -fbracket-depth=4096"
      }
    },
    {
      "name": "local/release",
      "displayName": "Release",
      "description": "local release build",
      "generator": "Unix Makefiles",
      "binaryDir": "build",
      "cacheVariables": {
        "CMAKE_EXPORT_COMPILE_COMMANDS": "YES",
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_CXX_FLAGS": "-O3 -flto -fbracket-depth=4096"
      }
    }
  ]
}
